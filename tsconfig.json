{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["DOM", "DOM.Iterable", "ES2017"],
    "allowJs": true, // Allow importing .jsx files
    "jsx": "react-jsx", // Supports JSX syntax in .tsx files
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true, // Skip third-party module type checking
    "strict": true, // Strict type checking options
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false, // Allows `any` types
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
